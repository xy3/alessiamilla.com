{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Description": {
      "type": "string"
    },
    "Content": {
      "type": "richtext",
      "required": false
    },
    "HeaderImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "ScrollSprites": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Color": {
      "type": "customField",
      "customField": "plugin::color-picker.color"
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Something": {
      "type": "richtext"
    }
  }
}
